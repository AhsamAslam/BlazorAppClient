<div class="col-xs-12 SmallImageCard">
    <div class="SmallImageCardBody">
        <div style="padding-bottom: 10px">
            <h6 class="SmallImageCardHeading">@Records.SmallImageCardHeading</h6>
        </div>
        <p class="SmallImageCardContent">@Records.SmallImageCardContent</p>
        <div class="float-left pl-8 pr-2 pb-0 pt-0" style="padding: 5px;">
            <img src="@Records.SmallImageCardSource" alt="image" class="SmallImageCardImage">

        </div>
        <div class="SmallImageCardText">
            <span>@Records.SmallImageCardText1</span><br>
            <span>@Records.SmallImageCardText2</span>
        </div>
    </div>

</div>

@code {
    [Parameter]
    public SmallImageCardDto Records { get; set; }

}
